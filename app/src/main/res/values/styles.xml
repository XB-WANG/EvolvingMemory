<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="myDrawerStyle" >
        <item name="android:textSize">15sp</item>
    </style>


    <style name="myCheckBox" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/checkbox_unchecked</item>
        <item name="colorControlActivated">@color/checkbox_checked</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    

</resources>
